<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <VideoView
        android:id="@+id/videoBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="#80000000"
        android:keepScreenOn="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/almacen"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="Citas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/centerGuide"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:backgroundTint="#FFEB3B"
        app:layout_constraintVertical_chainStyle="packed" />


    <Button
        android:id="@+id/eventos"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Entrenamientos"
        app:layout_constraintEnd_toStartOf="@id/centerGuide"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/black"
        android:backgroundTint="#FFEB3B"
        app:layout_constraintTop_toBottomOf="@id/almacen" />


    <Button
        android:id="@+id/taller"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:text="Nutrición"
        app:layout_constraintBottom_toBottomOf="@id/almacen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toEndOf="@id/centerGuide"
        app:layout_constraintTop_toTopOf="@id/almacen"
        android:backgroundTint="#FFEB3B"
        android:textColor="@android:color/black"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/pedidos"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:text="Guia"
        app:layout_constraintBottom_toBottomOf="@id/eventos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toEndOf="@id/centerGuide"
        app:layout_constraintTop_toTopOf="@id/eventos"
        android:backgroundTint="#FFEB3B"
        android:textColor="@android:color/black"
        app:layout_constraintVertical_bias="0.0" />



    <Button
        android:id="@+id/llamar"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:backgroundTint="#FFEB3B"
        android:text="Llamar"
        android:textColor="@android:color/black"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/almacen"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="154dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/videoBackground"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/chatgpt_image_2_oct_2025__22_22_30" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="Al continuar, aceptas nuestras/os terminos.: terminos y lincenciasde servicio de nuestra app EQUFIS"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977"
        tools:ignore="MissingConstraints" />

    <!-- res/layout/include_auth_buttons.xml (o dentro de tu ConstraintLayout) -->

    <!-- Separador fino -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEmail"
        style="@style/Widget.PillButton.Primary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="24dp"
        android:text="Continuar con el email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_32"
        app:layout_constraintStart_toStartOf="@id/btnEmail"
        app:layout_constraintEnd_toEndOf="@id/btnEmail"
        app:layout_constraintTop_toBottomOf="@id/btnEmail"
        android:layout_marginTop="20dp"/>

    <!-- “punto” centrado -->
    <View
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/dot_circle"
        app:layout_constraintTop_toBottomOf="@id/btnEmail"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintStart_toStartOf="@id/btnEmail"
        app:layout_constraintEnd_toEndOf="@id/btnEmail"/>

    <!-- Fila de iconos: Apple, Google, Facebook -->
    <!-- tu vector --><![CDATA[
    app:iconSize="24dp"
    app:layout_constraintTop_toBottomOf="@id/btnEmail"
    app:layout_constraintStart_toStartOf="@id/btnEmail"
    android:layout_marginTop="48dp"/>

    ]]>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApple"
        style="@style/Widget.PillIcon.Transparent"
        android:layout_width="88dp"
        android:layout_height="56dp"
        app:icon="@drawable/ic_apple"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="133dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogle"
        style="@style/Widget.PillIcon.Transparent"
        android:layout_width="88dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="24dp"
        app:icon="@drawable/ic_google"
        app:iconSize="24dp"
        app:layout_constraintEnd_toStartOf="@id/btnFacebook"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toEndOf="@id/btnApple"
        app:layout_constraintTop_toTopOf="@id/btnApple" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFacebook"
        style="@style/Widget.PillIcon.Transparent"
        android:layout_width="88dp"
        android:layout_height="56dp"
        app:icon="@drawable/ic_facebook"
        app:iconSize="24dp"
        app:layout_constraintTop_toTopOf="@id/btnApple"
        app:layout_constraintEnd_toEndOf="@id/btnEmail"/>

</androidx.constraintlayout.widget.ConstraintLayout>